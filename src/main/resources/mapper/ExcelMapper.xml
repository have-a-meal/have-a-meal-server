    <delete id="deleteMeal" parameterType="java.util.Map">
        DELETE
        FROM meal
        WHERE date BETWEEN #{firstDate}
          AND #{lastDate};
    </delete>

    <delete id="deleteMenu" parameterType="java.util.Map">
        DELETE
        FROM meal_has_food
        WHERE meal_id IN (SELECT meal_id
                          FROM meal
                          WHERE
            date BETWEEN '2024-04-01'
          AND '2024-04-03'
            );
    </delete>

</mapper>
